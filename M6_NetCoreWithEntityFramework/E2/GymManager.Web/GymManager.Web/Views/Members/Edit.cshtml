@model GymManager.Core.Members.Member
@{
    DateTime now = DateTime.Now;
    Layout = "/Views/Shared/_Layout.cshtml";
}
@section Head {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 class="mt-5">Edit Member</h3>
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-outline-info float-end">Back</a>
        </div>
    </div>
    

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="mt-3">
            <label asp-for="name" class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="name" />
            <span asp-validation-for="name" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" asp-for="lastName" />
            <span asp-validation-for="lastName" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="birth" class="form-label">Date of Birth</label>
            <input class="form-control" asp-for="birth" />
            <span asp-validation-for="birth" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="cityId" class="form-label">City</label>
            <select class="form-control" asp-for="cityId">
                <option value="1">Chetumal</option>
                <option value="2">Cancun</option>
                <option value="3">San Miguel De Cozumel</option>
                <option value="4">Playa del Carmen</option>
                <option value="5">Felipe Carillo Puerto</option>
                <option value="6">Isla Mujeres</option>
                <option value="7">Jose Maria Morelos</option>
                <option value="8">Kantunilkin</option>
                <option value="9">Tulum</option>}
                <option value="10">Bacalar</option>
                <option value="11">Puerto Morelos</option>
            </select>
            <span asp-validation-for="cityId" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="email" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

        <div class="mt-3 form-check">
            <input type="checkbox" class="form-check-input" asp-for="allowNewsLetter" />
            <label class="form-check-label" asp-for="allowNewsLetter">Subscribe to our newsletter?</label>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Submit</button>
    </form>
</div>
@section Script {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="/views/members/create.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}
