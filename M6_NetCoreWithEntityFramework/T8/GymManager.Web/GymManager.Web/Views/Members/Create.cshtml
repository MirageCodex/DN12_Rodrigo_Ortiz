@model GymManager.Core.Members.Member
@{
    DateTime now = DateTime.Now;
    Layout = "/Views/Shared/_Layout.cshtml";
}
@section Head {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="/lib/jqueryui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="~/lib/jqueryui/jquery-ui.theme.min.css" rel="stylesheet" />
    
}
<div class="container">
    <h3 class="mt-5">Registro de miembro</h3>
    <form asp-action="Create">
        <div class="mt-3">
            <label asp-for="MemberName" class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="MemberName" />
            <span asp-validation-for="MemberName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="MemberPhone" class="form-label">Teléfono</label>
            <input type="text" class="form-control" asp-for="MemberPhone" />
            <span asp-validation-for="MemberPhone" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="MemberEmail" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control" asp-for="MemberEmail" />
            <span asp-validation-for="MemberEmail" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="MemberStart" class="form-label">Inicio de membresía</label>
            <input class="form-control" asp-for="MemberStart" />
            <span asp-validation-for="MemberStart" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="MemberEnd" class="form-label">Fin de membresía</label>
            <input class="form-control" asp-for="MemberEnd" />
            <span asp-validation-for="MemberEnd" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="CityId" class="form-label">Ciudad</label>
            <select class="form-control" asp-for="CityId" >
                <option value="1">Ciudad de México</option>
                <option value="2">Aguascalientes</option>
                <option value="3">Monterrey</option>
                <option value="4">Guadalajara</option>
                <option value="5">Puebla</option>
                
            </select>
            <span asp-validation-for="CityId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mb-3">Enviar</button>
    </form>
</div>
@section Script {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="/views/members/create.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
}
